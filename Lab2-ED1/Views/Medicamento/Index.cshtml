@model IEnumerable<Lab2_ED1.Models.MedicamentoModel>

@{
    ViewBag.Title = "Index";
}

<h2>Medicamentos</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <input type="text" class="form-control" name="search" value="" placeholder="Find by name" />
        <button type="submit">Search</button>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id })
            </td>
        </tr>
    }

</table>
